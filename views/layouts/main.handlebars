                         <a href="/upload"><div class="more-upload items more" id="page-post"><i class="fas fa-folder-plus"></i>Đăng Bài</div></a>

                     </div>
                </div>
            </div>

            <div class="wrapper" id="wrapper">
                {{{body}}}
            </div>
        </div>


        
      </div>
    

</body>
<script>
   
      const showKhoi = $('#show-khoi')
      const modal = $('#popup-show-message-modal');
      const btnClose = document.getElementById('btn-close-modal')
      
      const box = $('#box-popup');

      btnClose.addEventListener('click', () => {
          box.addClass('animation-box');
           modal.addClass('animateModal')
            setTimeout(() => {
              modal.css('display', 'none')
          }, 150)
          
      })

      showKhoi.on('click', () => {
         
});
    

     
    
      $(".items").on('click', (e) => {
             e.target.classList.add("active")
      })
    const slider = $('#slider');
    const btn_slider = $('#btn-slider');
    const moreController = $('#more-controller');
    const btnshowMore = $('#btn-show-more');
    moreController.slideToggle();
    const numberKhoi = $('#number-khoi');
    var clickShowChage = 0;

    var click = 0;
   
    var clickValue = 0;

    btnshowMore.click(() => {
         click++;
         if(click == 2) {
             btnshowMore.removeClass('active')
             click = 0;
         }
         moreController.slideToggle();

    })

    btn_slider.click(function() {

        
        
        slider.toggleClass('slider-on');    
        
    })

    $('#wrapper').click(function() {
        if(slider.hasClass('slider-on')) {
            slider.removeClass('slider-on')
        }
    })


      //checkCurrentKhoi
            if(document.cookie.includes("url=10")) {
                document.getElementById('btn-to-home').href = '/khoi-10'
