           if(document.cookie.includes("url=11")) {
               document.getElementById('btn-to-home').href = '/khoi-11'
                numberKhoi.html('11')
                showKhoi.html('Khối 11')
                $('#show-khoi-drawer').html('Home - Khối 11')
          }

          if(document.cookie.includes("url=12")) {
            document.getElementById('btn-to-home').href = '/khoi-12'
               numberKhoi.html('12')
               showKhoi.html('Khối 12')
               $('#show-khoi-drawer').html('Home - Khối 12')
          }


          $('#show-khoi').click(() => {
              $('.chose-table-box').addClass('show-popup-change-animation')
            $('.change-khoi-popup-modal').css('display', 'block');
          })

         


          $('#close-change-modal').click(() => {
              setTimeout(() => {
$('.change-khoi-popup-modal').css('display', 'none');
$('.change-khoi-popup-modal').removeClass('animation-change-modal-hide');
              }, 200)
             $('.change-khoi-popup-modal').addClass('animation-change-modal-hide');
             
          })
          
</script>
